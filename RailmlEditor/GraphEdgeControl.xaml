<UserControl x:Class="RailmlEditor.GraphEdgeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">
    <Canvas x:Name="MainCanvas">
        <Line x:Name="EdgeLine" Stroke="Black" StrokeThickness="1.5" />
        <Polygon x:Name="ArrowHead" Fill="Black" Points="0,0 10,5 0,10" Visibility="Collapsed" />
        <TextBlock x:Name="LblEdge" Text="{Binding Label}" FontSize="10" Foreground="Blue" Background="White" Visibility="Collapsed" />
    </Canvas>
</UserControl>
