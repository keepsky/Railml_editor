<Window x:Class="RailmlEditor.GraphWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="clr-namespace:RailmlEditor.ViewModels"
    xmlns:local="clr-namespace:RailmlEditor" Title="Graph View" Height="600" Width="800" Background="#F0F0F0">
    <Window.Resources>
    </Window.Resources>

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Width="5000" Height="5000">
                <!-- Edges Layer -->
                <ItemsControl ItemsSource="{Binding Edges}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="Transparent"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:GraphEdgeControl />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Nodes Layer -->
                <ItemsControl ItemsSource="{Binding Nodes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="Transparent"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="-15,-15,0,0" Background="Transparent" MouseLeftButtonDown="Node_MouseLeftButtonDown" MouseMove="Node_MouseMove" MouseLeftButtonUp="Node_MouseLeftButtonUp">
                                <Ellipse Width="30" Height="30" Fill="White" Stroke="Black" StrokeThickness="1.5" IsHitTestVisible="False"/>
                                <TextBlock Text="{Binding Label}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10" FontWeight="Bold" IsHitTestVisible="False"/>
                                <TextBlock Text="{Binding Type}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,-15" FontSize="8" Foreground="Gray" IsHitTestVisible="False"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
