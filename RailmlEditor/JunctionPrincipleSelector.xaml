<Window x:Class="RailmlEditor.JunctionPrincipleSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="principle track 선택" Height="300" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="분기(Diverging) 트랙들 중 주선(Principle Track)을 선택하세요:" Margin="0,0,0,10" FontWeight="Bold"/>

        <ListBox x:Name="CandidatesListBox" Grid.Row="1" DisplayMemberPath="FullDisplayName" d:ItemsSource="{d:SampleData ItemCount=3}">
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="선택 (Select)" Width="100" Height="30" Margin="5" Click="Select_Click" IsDefault="True"/>
            <Button Content="취소 (Cancel)" Width="100" Height="30" Margin="5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
