<Window x:Class="RailmlEditor.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="Settings" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="{DynamicResource MaterialDesignPaper}" TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <StackPanel Margin="20">
        <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <TextBlock Text="Theme" Margin="0,0,0,5"/>
        <ComboBox x:Name="ThemeCombo" Width="200" HorizontalAlignment="Left" Padding="5" SelectionChanged="ThemeCombo_SelectionChanged">
            <ComboBoxItem Content="Default (Light)" Tag="Light"/>
            <ComboBoxItem Content="Dark" Tag="Dark"/>
        </ComboBox>

        <Button Content="Close" HorizontalAlignment="Right" Margin="0,20,0,0" Width="80" Click="Close_Click"/>
    </StackPanel>
</Window>
