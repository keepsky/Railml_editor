<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Material Design Color Palette Adapter -->

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#303030"/>
    <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="#424242"/>
    <SolidColorBrush x:Key="MaterialDesignToolBarBackground" Color="#212121"/>

    <!-- Text / Foreground -->
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#DDFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="#89FFFFFF"/>

    <!-- Dividers & Borders -->
    <SolidColorBrush x:Key="MaterialDesignDivider" Color="#1FFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignSelection" Color="#307C4DFF" Opacity="0.4"/>

    <!-- Accents -->
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#673AB7"/>
    <!-- DeepPurple -->
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#9575CD"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#512DA8"/>

    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#CDDC39"/>
    <!-- Lime -->
    <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#F0F4C3"/>
    <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#AFB42B"/>

    <!-- Standard Styles -->
    <Style x:Key="MaterialDesignToolBar" TargetType="{x:Type ToolBar}">
        <Setter Property="Background" Value="{StaticResource MaterialDesignToolBarBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource MaterialDesignBody}"/>
    </Style>

    <!-- Grid Background Brush (Dark Mode) -->
    <DrawingBrush x:Key="GridBackgroundBrush" Viewbox="0,0,10,10" ViewboxUnits="Absolute" Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,10,10"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#3A3A3A">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

</ResourceDictionary>
